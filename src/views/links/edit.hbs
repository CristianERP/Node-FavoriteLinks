<div class="container p-4">
    <div class="row">
        <div class="col-md-4 m-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}} " method="POST">
                        <div class="mb-3">
                            <input type="text" class="form-control" name="title" placeholder="Title" autofocus value="{{link.title}}">
                        </div>
                        <div class="mb-3">
                            <input type="url" name="url" class="form-control" placeholder="URL" value="{{link.url}}">
                        </div>
                        <div class="mb-3">
                            <textarea name="description" id="description" cols="30" rows="2" placeholder="Description" class="form-control">{{link.description}} </textarea>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-info w-100">
                                Update
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>