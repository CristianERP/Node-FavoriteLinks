<div class="container p-4">
    <div class="row">
        <div class="col-md-4 m-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="mb-3">
                            <input type="text" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>
                        <div class="mb-3">
                            <input type="url" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="mb-3">
                            <textarea name="description" id="description" cols="30" rows="2" placeholder="Description" class="form-control"></textarea>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-success w-100">
                                Save
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>